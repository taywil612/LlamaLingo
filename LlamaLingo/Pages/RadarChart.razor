@page "/RadarChart"
@layout MainLayout

@using Syncfusion.Blazor.Charts
@using Syncfusion.Blazor.Notifications
@inject DbContext db;
@inject SelectedInfo SelectedInfo

<div class="page-heading">
    <h3 class="header">Radar Chart</h3>
	<p class="subtitle"><a href="">Home</a> / Radar Chart</p>
</div>

<div class="content-box shadow">
	@if (IsLoading)
	{
		<SfSkeleton Shape="Syncfusion.Blazor.Notifications.SkeletonType.Rectangle" Width="100%" Height="100%"></SfSkeleton>
	}
	else
	{
		<SfChart Theme="Theme.Fluent">
			<ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category"></ChartPrimaryXAxis>
			<ChartSeriesCollection>
				@if(weeklyPypeDetails != null)
				{
					@foreach(var item in weeklyPypeDetails)
					{
						<ChartSeries DataSource="@item" Type="ChartSeriesType.Radar" Name="@item.First().NounLabel" XName="ElementLabel" YName="ChartData1"></ChartSeries>
					}
				}
	 		</ChartSeriesCollection>
			<ChartTooltipSettings Enable="true"></ChartTooltipSettings>
			<ChartZoomSettings EnableSelectionZooming="true"></ChartZoomSettings>
		</SfChart>
	}
</div>

<style>
	.content {
		padding: 30px 30px 70px 30px;
	}

	.content-box {
		height: 100%;
		min-height: 400px;
		overflow: auto;
		border-radius: 20px;
	}

</style>