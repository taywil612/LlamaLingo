@inherits LayoutComponentBase
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Navigations

<PageTitle>LlamaLingo</PageTitle>

@* Create the sidebar for the chat. *@
<SfSidebar ID="Chatbar" Type="SidebarType.Over" Position="SidebarPosition.Right" Width="100%" CloseOnDocumentClick="true" @ref="Chat" @bind-IsOpen="ChatbarToggle" ZIndex="1200">
    <ChildContent>
        <div id="chatbar" class="sidebar" style="position:fixed;z-index:1200; width: 100%;">
            <div class="topnav navbar navbar-dark">
                <a class="navbar-brand" href=""><span class="displayText" style="margin-left: 15px;">Chat</span></a>
                <button class="navbar-toggler" title="Close Chat" style="margin-right: 10px;" @onclick="ToggleChatMenu"></button>
            </div>
            @* Add the chat menu into the chat sidebar. *@                
            <ChatMenu />
        </div>
    </ChildContent>
</SfSidebar>   

@* Hide the chat button if chat bar is on the screen. *@
@if (!this.ChatbarToggle)
{ 
        <SfFab Position="FabPosition.BottomRight" title="Chat" OnClick="ToggleChatMenu">    
            <div class="oi oi-chat"></div>
            <span class="e-badge e-badge-success e-badge-overlap e-badge-dot"></span>
        </SfFab>
}

@* Create the top-row navigation bar. *@
<div class="top-row px-4" style="z-index:1111;">
    <a href="/RadarChart">RadarChart</a>
    <a href="/GanttChart">GanttChart</a>
    <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
</div>

@* Create the sidebar for the navigation menu. *@
<SfSidebar ID="Sidebar" Type="SidebarType.Auto" Width="300px" DockSize="65px" EnableDock="true" @ref="Sidebar" @bind-IsOpen="SidebarToggle" ZIndex="1199">
    <ChildContent>
        <div class="sidebar" style="position:fixed;z-index:1200">
            <div class="topnav navbar navbar-dark">
                <button class="navbar-toggler" @onclick="ToggleNavMenu"></button>
                <a class="navbar-brand" href=""><span class="displayText" style="margin-left:15px">LlamaLingo</span></a>
            </div>
            @* Add the navigation menu into the sidebar. *@                
            <NavMenu />
        </div>
    </ChildContent>
</SfSidebar>

@* 
    The content below will be pushed by sidebar. 
*@

@* Create the page content. *@
<div class="page-content">
    <div class="main">
        <div class="content">
            @* Display the content from other pages. *@
            @Body
        </div>
    </div>
</div>

